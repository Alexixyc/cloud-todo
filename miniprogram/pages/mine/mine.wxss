.m-header {
  width: 700rpx;
  padding: 20rpx 0;
  position: relative;
}
.m-header::after {
  position: absolute;
  content: "";
  background: #999999;
}
.m-header::after {
  bottom: 0;
  left: 0;
  width: 100%;
  height: 1px;
  -webkit-transform-origin: 0 100%;
  -ms-transform-origin: 0 100%;
  transform-origin: 0 100%;
}
@media (-webkit-min-device-pixel-ratio: 1), (min-device-pixel-ratio: 1) {
  .m-header::after {
    -webkit-transform: scale(1, 1);
    -ms-transform: scale(1, 1);
    transform: scale(1, 1);
  }
}
@media (-webkit-min-device-pixel-ratio: 2), (min-device-pixel-ratio: 2) {
  .m-header::after {
    -webkit-transform: scale(1, 0.5);
    -ms-transform: scale(1, 0.5);
    transform: scale(1, 0.5);
  }
}
@media (-webkit-min-device-pixel-ratio: 3), (min-device-pixel-ratio: 3) {
  .m-header::after {
    -webkit-transform: scale(1, 0.333);
    -ms-transform: scale(1, 0.333);
    transform: scale(1, 0.333);
  }
}
.m-header .mine-avatar {
  margin: 20rpx auto;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
}
.m-header .mine-nickname {
  font-size: 28rpx;
  color: #666666;
  text-align: center;
  overflow: hidden;
}
